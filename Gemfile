gem 'turbolinks', '~> 5'
gem 'jbuilder', '~> 2.5'
gem 'rails-i18n', '~> 4.0'
gem "administrate"
gem 'administrate-field-paperclip'
gem 'paperclip'
gem 'slim'
gem 'aasm'
gem "font-awesome-rails"

