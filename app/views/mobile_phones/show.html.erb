  <%- @mobile_phone.mobile_phone_pictures.each.with_index do |mobile_phone_picture, index| %>
    <%= image_tag mobile_phone_picture.picture.url(:medium), class: "rounded" %>
  <% end %>
  <br>

<table class="table">
  <thead>
    <div>
      <h4 class="badge badge-warning">Цена: <span><%= number_to_currency @mobile_phone.price, unit: 'BYN ' %></span></h4>
    </div>
  </thead>
  <tbody>
    <tr>
      <td>Модель:</td>
      <td><%= @mobile_phone.full_name %></td>
    </tr>
    <tr>
      <td>Флэш-память:</td>
      <td><%= @mobile_phone.memory_storage %></td>
    </tr>
    <tr>
      <td>Размер экрана:</td>
      <td><%= @mobile_phone.display_size %></td>
    </tr>
    <tr>
      <td>Процессор:</td>
      <td><%= @mobile_phone.processor %></td>
    </tr>
    <tr>
      <td>Оперативная память:</td>
      <td><%= @mobile_phone.operative_memory %></td>
    </tr>
    <tr>
      <td>Операционная система:</td>
      <td><%= @mobile_phone.operation_system.name %></td>
    </tr>
    <tr>
      <td>Цвет:</td>
      <td>
        <%= @mobile_phone.colors.map { |color| color.name }.join(", ") %>
      </td>
    </tr>
  </tbody>
</table>

<%= form_for :order_mobile_phone, url: order_mobile_phones_path, method: :post, remote: true do |f| %>

  <div class="row">
    <div class="col-2">
      <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
    </div>
    <div class="col-2">
      <%= f.hidden_field :mobile_phone_id, value: @mobile_phone.id %>
      <%= f.select :color_id, @mobile_phone.colors.map { |p| [ p.name, p.id ] }, {}, { class: "form-control" } %>
    </div>
    <div class="col-2">
      <%= f.submit "Добавить в корзину", class: "btn btn-primary" %>
    </div>
    <div class="col-2">
    <%= link_to "назад", mobile_phones_path, class: "btn btn-dark" %>
    </div>
  </div>
<% end %>
<br>


