<div class="well">
  <div class="row">
    <div class="col-xs-8">
      <h4><%= mobile_phone.name %></h4>
    </div>
    <div class="col-xs-4">

      <%= form_for order_mobile_phone, url: order_mobile_phone_path(order_mobile_phone), method: :patch, remote: true do |f| %>
        <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency order_mobile_phone.unit_price %></span></h4>
        <div class="row">
          <div class="col-xs-4">
            <%= f.number_field :quantity, value: order_mobile_phone.quantity.to_i, class: "form-control", min: 1 %>
            <%= f.select :color_id, order_mobile_phone.mobile_phone.colors.map { |p| [ p.name, p.id ] } %>
            <%= f.hidden_field :mobile_phone_id, value: mobile_phone.id %>
          </div>
          <div class="col-xs-8 text-right">
            <div class="btn-group">
              <%= f.submit "Update", class: "btn btn-primary" %>
              <%= link_to "Delete", order_mobile_phone_path(order_mobile_phone), { data: { confirm: "Are you sure you wish to delete the product '#{mobile_phone.name}' from your cart?" }, method: :delete, remote: true, class: "btn btn-danger" } %>
            </div>
          </div>
        </div>
        <h4 class="text-right">Total Price: <span style="color: green"><%= number_to_currency order_mobile_phone.total_price %></span></h4>
      <% end %>
    </div>
  </div>
</div>
